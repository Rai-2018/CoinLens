
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @coin, :url => { :controller => 'coins', :action => 'update', :id => @coin } do |f| %>
    		<%= f.label :name, "Name" %>
    		<%= f.text_field :name %>

   			 <%= f.label :amount, "Amount" %>
    <%= f.text_area :amount %>

    <%= f.submit "Update" %>
		<% end %>
	</div>
</div>