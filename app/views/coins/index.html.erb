<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
<% provide(:title, "Portfolio") %>
<meta name="viewport" content="width=device-width, initial-scale=1">

	<h1><b>Current Holdings </b></h1>

	<div class = "row">
		<div class="column side1">

			<div align="lef">
				<%= link_to 'New Coin', new_user_coin_path, :class => "btn btn-primary"%> 
			</div>
			<br>
				<ul id="coin-list">
					<table class = 'table'>
						<% @coins.each do |e| %>
							<tr>
								<td>
									<b><%= e.name %></b>
								</td>
								<td>
									<%= link_to 'Show', user_coin_path(@user,e), :class => "btn btn-primary"%>
									<%= link_to 'Edit', edit_user_coin_path(@user,e) ,:class => "btn btn-warning"%>
									<%= link_to 'Destroy', user_coin_path(@user,e), :method => :delete,:class => "btn btn-danger" %>
								</td>
							</tr>
						<%end%>
					</table>
				<b><p>Total: $<%=@total%></b></p>
				</ul>
		</div>


		<div class="column middle1">
			<%= pie_chart @arrayd , donut:true%>
		</div>

	</div>