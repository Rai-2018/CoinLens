<% provide(:title, "Add Coin") %>
<h1>Add a holding</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @coin, :url => { :controller => 'coins', :action => 'create' } do |f| %>
    	<%= f.label :name, "Name" %>
    	<%= f.select(:name, Coin::Coin_List) %>

   		<%= f.label :amount, "Amount" %>
    	<%= f.text_area :amount %>

    	<%= f.submit "Add to portfolio" %>
		<% end %>
	</div>
</div>