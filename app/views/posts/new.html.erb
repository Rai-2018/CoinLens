<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @post, :url => { :controller => 'posts', :action => 'create'} do |f| %>
			<%= f.label :content, "Content" %>
			<%= f.text_area :content, class: 'form-control' %>
			<%= f.submit "Post", class: 'btn btn-default' %>
		<% end %>
	</div>
</div>