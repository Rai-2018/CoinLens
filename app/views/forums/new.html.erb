<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @forum do |f| %>
			<%= f.label :name, "Forum Name" %>
			<%= f.text_field :name %>
			<%= f.label :description, "Forum Description" %>
			<%= f.text_area :description %>
			<%= f.submit "Create Forum" %>
		<% end %>
	</div>
</div>
